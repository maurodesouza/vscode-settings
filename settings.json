{
  "[prisma]": {
    "editor.formatOnSave": true
  },
  
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "workbench.colorTheme": "Dracula Theme",
  "workbench.iconTheme": "material-icon-theme",
  "editor.minimap.enabled": false,
  
  "material-icon-theme.folders.associations": {
    "infra": "app",
    "entities": "class",
    "schemas": "class",
    "typeorm": "database",
    "repositories": "mappings",
    "http": "container",
    "migrations": "tools",
    "modules": "components",
    "implementations": "core",
    "navigation": "routes",
    "navigations": "routes",
    "dtos": "typescript",
    "fakes": "mock",
    "websockets": "pipe",
    "protos": "pipe",
    "grpc": "pipe",
    "context": "hook",
    "contexts": "hook",
    "eventos": "event",
    "lesson": "log",
    "workflows": "ci",
    "types": "typescript",
    "seeds": "base",
    "sections": "class",
    ".jest": "test",
  },
  
  "material-icon-theme.files.associations": {
    "ormconfig.json": "database",
    "tsconfig.json": "tune",
    "*.proto": "3d",
    "stories.tsx": "storybook",
    "test.tsx": "jest",
    "test.ts": "jest",
    "animations.ts": "3d",
    "styles.ts": "renovate",
  },
  
  "material-icon-theme.folders.color": "#fff",
  "material-icon-theme.folders.theme": "specific",
  "material-icon-theme.activeIconPack": "nest",
  
  "simple.readme.settings.lang": "en",
  "simple.readme.settings.github": "maurodesouza",
  "simple.readme.settings.name": "Mauro de Souza",
  
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,
  
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": false,
  
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command",
    "stash-push:command",
    "switch:command",
    "branch-create:command"
  ],
  
  // "git.enableCommitSigning": true,
  
  "gitlens.advanced.messages": {
    "suppressGitMissingWarning": true
  },
  
  "git.confirmSync": false,
  "workbench.startupEditor": "newUntitledFile",
  "editor.wordWrap": "on",
  "files.associations": {
    "*.mdx": "markdown",
    ".air.toml": "toml"
  },
  "workbench.activityBar.location": "top",
  "workbench.editorAssociations": {
    "*.pptx": "default"
  },
  "cSpell.language": "en",
  "remote.autoForwardPortsSource": "hybrid",

  "gitlens.views.scm.grouped.views": {
    "commits": false,
    "branches": false,
    "remotes": false,
    "stashes": false,
    "tags": false,
    "worktrees": false,
    "contributors": false,
    "repositories": false,
    "searchAndCompare": false,
    "launchpad": false
  },

  "javascript.updateImportsOnFileMove.enabled": "never",
  "javascript.updateImportsOnPaste.enabled": false,

  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnPaste.enabled": false,
  "cSpell.userWords": [
    "sonner",
    "terrantic"
  ],

  "tailwindCSS.experimental.classRegex": [
    // React TWC

    "twc\\.[^`]+`([^`]*)`",
    "twc\\([^`]*?\\)`([^`]*)`",
    ["twc\\.[^`]+\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["twc\\([^`]*?\\).*?\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],

    // React TWC + clsx

    "twx\\.[^`]+`([^`]*)`",
    "twx\\([^`]*?\\)`([^`]*)`",
    ["twx\\.[^`]+\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["twx\\([^`]*?\\).*?\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],

    // Tailwind Variants

    ["([\"'`][^\"'`]*.*?[\"'`])", "[\"'`]([^\"'`]*).*?[\"'`]"]
  ],

  "yaml.schemas": {
    "https://raw.githubusercontent.com/compose-spec/compose-spec/master/schema/compose-spec.json": [
      "docker-compose.yml",
      "docker-compose.yaml",
      "compose.yml",
      "compose.yaml"
    ]
  },
  "workbench.secondarySideBar.defaultVisibility": "hidden",

  "evenBetterToml.schema.associations": {
    "**/.air.toml": null
  }
}
